<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevaDesparasitacion">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <TextView
            android:id="@+id/tvNuevaDesp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#94F129"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="NUEVA DESPARASITACION"
            android:textColor="#673AB7"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNombreMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="Nombre mascota:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNombreMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:ems="10"
            android:hint="Sirio, Dama, Nemo, Gromit..."
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tvNombreDesp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="Nombre del tratamiento antiparasitario:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNombreDesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:ems="10"
            android:hint="Seresto, Milbemax..."
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tvTipoDesp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="Tipo de desparasitaci贸n:"
            android:textSize="20sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/etTipoDesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:ems="10"
            android:hint="Interna/externa"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tvDosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="Dosis:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDosisDesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:ems="10"
            android:hint="1 comprimido"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tvFrecuencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="Frecuencia tratamiento antiparasitario:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etFrecuenciaDesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:ems="10"
            android:hint="3 meses"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:id="@+id/tvFechaDesp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="Fecha desparasitaci贸n"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etFechaDesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:ems="10"
            android:hint="10/07/23"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:id="@+id/tvFechaProxDesp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="Fecha pr贸xima desparasitaci贸n:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etFechaProxDesp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:ems="10"
            android:hint="10/10/23"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btInsertarDesp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="0px"
                android:layout_marginLeft="0px"
                android:layout_marginTop="20px"
                android:text="Guardar"
                android:textColor="#BD1CD8"
                android:textSize="24sp"
                app:backgroundTint="#5EF165"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="158dp"
                tools:layout_editor_absoluteY="108dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btModificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="35px"
                android:layout_marginLeft="85px"
                android:layout_marginTop="20px"
                android:text="Modificar"
                android:textColor="#BD1CD8"
                android:textSize="24sp"
                app:backgroundTint="#5EF165"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="158dp"
                tools:layout_editor_absoluteY="108dp"/>

            <Button
                android:id="@+id/btBorrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="35px"
                android:layout_marginLeft="35px"
                android:layout_marginTop="20px"
                android:text="Borrar"
                android:textColor="#BD1CD8"
                android:textSize="24sp"
                app:backgroundTint="#5EF165"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="158dp"
                tools:layout_editor_absoluteY="108dp" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
