<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevaVacunacion">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNuevaNot"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#94F129"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="NUEVA NOTIFICACION"
                android:textColor="#673AB7"
                android:textSize="45sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvFechaNot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:text="Fecha seleccionada:"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btFechaNot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="0px"
                    android:layout_marginLeft="0px"
                    android:layout_marginTop="20px"
                    android:text="Fecha notificación"
                    android:textColor="#BD1CD8"
                    android:textSize="12sp"
                    app:backgroundTint="#5EF165"
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="158dp"
                    tools:layout_editor_absoluteY="108dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvHoraNot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:text="Hora seleccionada:"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btHoraNot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="0px"
                    android:layout_marginLeft="0px"
                    android:layout_marginTop="20px"
                    android:text="Hora notificación"
                    android:textColor="#BD1CD8"
                    android:textSize="12sp"
                    app:backgroundTint="#5EF165"
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="158dp"
                    tools:layout_editor_absoluteY="108dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="35px"
                    android:layout_marginLeft="85px"
                    android:layout_marginTop="20px"
                    android:text="Guardar"
                    android:textColor="#BD1CD8"
                    android:textSize="24sp"
                    app:backgroundTint="#5EF165"
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="158dp"
                    tools:layout_editor_absoluteY="108dp"/>

                <Button
                    android:id="@+id/btBorrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="35px"
                    android:layout_marginLeft="35px"
                    android:layout_marginTop="20px"
                    android:text="Borrar"
                    android:textColor="#BD1CD8"
                    android:textSize="24sp"
                    app:backgroundTint="#5EF165"
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="158dp"
                    tools:layout_editor_absoluteY="108dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
